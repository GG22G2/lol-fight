    <groupId>hsb.lol</groupId>
    <artifactId>lol-fight</artifactId>
    <version>1.0</version>
    <name>lol-fight</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <junit.version>5.9.1</junit.version>
        <gluonfx.maven.plugin.version.custom>1.0.27</gluonfx.maven.plugin.version.custom>
        <mainClass>hsb.lol.lolfight.Main</mainClass>
        <mainClass2>hsb.lol.lolfight.Launch</mainClass2>
        <maven.compiler.source>25</maven.compiler.source>
    </properties>
    <repositories>
        <repository>
            <id>central</id>
            <url>https://maven.aliyun.com/repository/central</url>
        </repository>
        <repository>
            <id>jcenter</id>
            <url>https://maven.aliyun.com/repository/jcenter</url>
        </repository>
        <repository>
            <id>maven_central</id>
            <name>Maven Central</name>
            <url>https://repo.maven.apache.org/maven2/</url>
        </repository>
    </repositories>
    <dependencies>
<!--        <dependency>-->
<!--            <groupId>org.openjfx</groupId>-->

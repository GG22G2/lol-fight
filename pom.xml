        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>26-ea+7</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.*</include>
                    <include>**/*.*</include>
                </includes>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.*</include>
                    <include>**/*.*</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
<!--                <version>3.10.1</version>-->
                <configuration>
                    <source>25</source>
                    <target>25</target>
                    <compilerArgs>
                        <arg>--add-modules=javafx.controls</arg>
                        <arg>--add-modules=javafx.base</arg>
                        <arg>--add-modules=javafx.graphics</arg>

<!--                        <arg>&#45;&#45;add-modules=jdk.incubator.foreign</arg>-->
<!--                        <arg>&#45;&#45;add-exports=jdk.incubator.foreign/jdk.internal.foreign=hsb.lol.lolfight</arg>-->
<!--                        <arg>&#45;&#45;add-modules=java.base</arg>-->
<!--                        <arg>&#45;&#45;add-exports=java.base/jdk.internal.misc=hsb.lol.lolfight</arg>-->
<!--                        <arg>&#45;&#45;add-modules=java.desktop</arg>-->
<!--                        <arg>&#45;&#45;add-exports=java.desktop/sun.awt=hsb.lol.lolfight</arg>-->
<!--                        <arg>&#45;&#45;add-exports=java.desktop/java.awt.peer=hsb.lol.lolfight</arg>-->

                    </compilerArgs>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.gluonhq</groupId>
                <artifactId>gluonfx-maven-plugin</artifactId>
                <version>${gluonfx.maven.plugin.version.custom}</version>
                <configuration>
                    <target>host</target>

                    <mainClass>${mainClass}</mainClass>
                    <nativeImageArgs>
                        <arg>--no-fallback</arg>
                        <arg>--enable-http</arg>
                        <arg>--enable-https</arg>
                        <arg>-H:+AddAllCharsets</arg>
                        <arg>-dsa</arg>
<!--                        <arg>-H:DashboardDump=lol-fight</arg>-->
<!--                        <arg>-H:+DashboardAll</arg>-->
                    </nativeImageArgs>
                    <linkerArgs>
                        <arg>-Wl,--subsystem,console</arg>
                    </linkerArgs>
                    <reflectionList>
                        <list>java.net.AbstractPlainSocketImpl</list>
                    </reflectionList>
                    <graalvmHome>G:\kaifa_environment\jdk\graalvm-java23-windows-amd64-gluon-23+25.1-dev</graalvmHome>
                    <enableSWRendering>false</enableSWRendering>
                    <runtimeArgs>
                        <arg>-Dfile.encoding=utf8</arg>
                    </runtimeArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>

